//-----------------------------------------------------------------------------
// Container styling
//-----------------------------------------------------------------------------
.ui-spaced-row > * + * {
  margin-left: 5px;
}
.ui-spaced-column > * + * {
  margin-left: 5px;
}
.ui-row {
  display: flex;
  flex-direction: row;
}
.ui-column {
  display: flex;
  flex-direction: column;
}
.ui-row > *, .ui-column > * {
  display: flex;
}
.ui-spacer {
  flex: 1;
}
.ui-centered {
  align-self: stretch;
  justify-content: center;
  align-items: center;
}

//-----------------------------------------------------------------------------
// Input styling
//-----------------------------------------------------------------------------
.ui-input[contenteditable="true"] {
  white-space: pre;
}

.CodeMirror * { display:block; }
.CodeMirror span { display: inline; }
.CodeMirror.cm-s-default { font-family: "Lato"; font-size: 12pt; height: auto; background: transparent; }
.CodeMirror .Codemirror-scroll { height:auto; }
.cm-s-default .CodeMirror-cursor { }
